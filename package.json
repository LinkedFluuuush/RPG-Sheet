{
  "name": "rpgsheet",
  "productName": "rpgsheet",
  "version": "0.4.1",
  "titleName": "RPG Sheet",
  "description": "RPG Sheet viewer and editor",
  "main": "src/main.js",
  "scripts": {
    "start-open": "electron-forge start -- \"./examples/FicheVierge.rpSheet\"",
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make --arch=all",
    "publish": "electron-forge publish",
    "lint": "eslint src"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/LinkedFluuuush/RPG-Sheet.git"
  },
  "keywords": [],
  "author": "linked",
  "license": "MIT",
  "config": {
    "forge": {
      "packagerConfig": {
        "extendInfo": "./Info.plist"
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "rpgsheet"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin",
            "linux"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {
            "name": "rpgsheet",
            "options": {
              "categories": [
                "Game"
              ],
              "description": "RPG Sheet viewer and editor",
              "homepage": "https://github.com/LinkedFluuuush/RPG-Sheet",
              "maintainer": "Jean-Baptiste Louvet-Daniel",
              "mimeType": [
                "application/x-rpsheet"
              ],
              "name": "rpgsheet",
              "productName": "RPG Sheet"
            }
          }
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {
            "name": "rpgsheet",
            "options": {
              "categories": [
                "Game"
              ],
              "description": "RPG Sheet viewer and editor",
              "homepage": "https://github.com/LinkedFluuuush/RPG-Sheet",
              "mimeType": [
                "application/x-rpsheet"
              ],
              "name": "rpgsheet",
              "productName": "RPG Sheet"
            }
          }
        }
      ]
    }
  },
  "dependencies": {
    "electron-regedit": "^1.1.0",
    "electron-squirrel-startup": "^1.0.0",
    "file-type": "^14.2.0",
    "jquery": "^3.5.0",
    "jquery-color": "^3.0.0-alpha.1",
    "update-electron-app": "^1.5.0"
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.50",
    "@electron-forge/maker-deb": "^6.0.0-beta.50",
    "@electron-forge/maker-rpm": "^6.0.0-beta.50",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.50",
    "@electron-forge/maker-zip": "^6.0.0-beta.50",
    "electron": "9.4.0",
    "eslint": "^6.8.0"
  }
}
